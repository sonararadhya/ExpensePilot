<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css"> <!-- Linking to the CSS file in "public" folder -->
</head>
<body>
    <div class="login-container">
        <h2>Login to Money Tracker</h2>
        <form action="/login" method="POST">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <button type="submit">Login</button>
        </form>
    </div>
    <link rel="stylesheet" href="/style.css">  <!-- This will use the style.css file from "public" -->
<script src="/script.js"></script>  <!-- This will use the script.js file from "public" -->

    <script src="/script.js"></script> <!-- Linking to the JavaScript file in "public" folder -->
</body>
</html>